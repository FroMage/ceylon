#!/bin/sh

# resolve links - $0 may be a softlink
PRG="$0"
while [ -h "$PRG" ]; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=`dirname "$PRG"`/"$link"
    fi
done

. $(dirname "$PRG")/args.sh

# JAVA_CP are classes required by the tool to run
JAVA_CP="$CEYLON_REPO/com/redhat/ceylon/compiler/java/$CEYLON_VERSION/com.redhat.ceylon.compiler.java-$CEYLON_VERSION.jar"
JAVA_CP="$JAVA_CP:$CEYLON_REPO/com/redhat/ceylon/typechecker/$CEYLON_VERSION/com.redhat.ceylon.typechecker-$CEYLON_VERSION.jar"
# FIXME: https://github.com/ceylon/ceylon-module-resolver/issues/7
JAVA_CP="$JAVA_CP:$HOME/.m2/repository/com/redhat/ceylon/cmr/cmr-api/1.0.0-SNAPSHOT/cmr-api-1.0.0-SNAPSHOT.jar"
JAVA_CP="$JAVA_CP:$HOME/.m2/repository/com/redhat/ceylon/cmr/cmr-spi/1.0.0-SNAPSHOT/cmr-spi-1.0.0-SNAPSHOT.jar"
JAVA_CP="$JAVA_CP:$HOME/.m2/repository/com/redhat/ceylon/cmr/cmr-impl/1.0.0-SNAPSHOT/cmr-impl-1.0.0-SNAPSHOT.jar"
JAVA_CP="$JAVA_CP:$HOME/.m2/repository/com/redhat/ceylon/cmr/cmr-webdav/1.0.0-SNAPSHOT/cmr-webdav-1.0.0-SNAPSHOT.jar"
JAVA_CP="$JAVA_CP:$CEYLON_REPO/ceylon/language/$CEYLON_VERSION/ceylon.language-$CEYLON_VERSION.car"
JAVA_CP="$JAVA_CP:$CEYLON_HOME/lib/antlr-3.4-complete.jar"
JAVA_CP="$JAVA_CP:$CEYLON_HOME/lib/markdownj-core-faf3bf83000.jar"

if test -n "$USER_CP"
then
    JAVA_CP="$JAVA_CP:$USER_CP"
fi

java \
    -enableassertions \
    -classpath "$JAVA_CP" \
    "-Dceylon.home=$CEYLON_HOME" \
    com.redhat.ceylon.ceylondoc.Main \
    $ARGS
