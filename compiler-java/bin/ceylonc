#! /bin/bash

if [ $# -eq 0 ] ; then
    echo 'Usage: ceylonc <options> <sourcefiles>'
    echo 'where possible options include:'
    echo '  -src                       Specify where to find input source files'
    echo '  -out                       Specify repository to store generated code in'
    echo '  -verbose                   Output messages about what the compiler is doing'
    exit 0
fi

# resolve links - $0 may be a softlink
PRG="$0"
while [ -h "$PRG" ]; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=`dirname "$PRG"`/"$link"
    fi
done

source $(dirname "$PRG")/args.sh

# JAVA_CP are classes required by the compiler to run. They have to go to the boot class path on Mac OS X
# so just put it there for all (Linux) OSes for consistency.
JAVA_CP="$HOME/.ceylon/repo/com/redhat/ceylon/compiler/$CEYLON_VERSION/com.redhat.ceylon.compiler-$CEYLON_VERSION.jar"
JAVA_CP="$JAVA_CP:$HOME/.ceylon/repo/com/redhat/ceylon/typechecker/$CEYLON_VERSION/com.redhat.ceylon.typechecker-$CEYLON_VERSION.jar"
JAVA_CP="$JAVA_CP:$CEYLON_HOME/lib/antlr-3.4-complete.jar"

# COMPILE_CP are classes required by the code being compiled
# Do not add the hand-made runtime if we're bootstrapping it
if test "$BOOTSTRAP" != "true"
then
    COMPILE_CP="$HOME/.ceylon/repo/ceylon/language/$CEYLON_VERSION/ceylon.language-$CEYLON_VERSION.car:$USER_CP"
else
    COMPILE_CP="$USER_CP"
fi

java \
    -enableassertions \
    -Xbootclasspath/p:"$JAVA_CP" \
    com.redhat.ceylon.compiler.Main \
    -classpath "$COMPILE_CP" \
    $ARGS

