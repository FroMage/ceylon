#!/bin/sh -e

VERSION=1.1.0

if [ "$1" = "remove" ] || [ "$1" = "deconfigure" ]; then
	update-alternatives --remove ceylon /usr/share/ceylon/$VERSION/bin/ceylon
    for man in /usr/share/doc/ceylon-$VERSION/man/*
    do
        page=`basename $man`
        update-alternatives --remove $page $man
    done
fi
 
